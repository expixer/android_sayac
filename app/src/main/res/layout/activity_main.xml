<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_sayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_arttirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayıyı Arttır"
        app:layout_constraintBottom_toTopOf="@+id/tv_sayac"
        app:layout_constraintEnd_toEndOf="@+id/tv_sayac"
        app:layout_constraintStart_toStartOf="@+id/tv_sayac"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_azaltma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayıyı Azalt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_sayac"
        app:layout_constraintStart_toStartOf="@+id/tv_sayac"
        app:layout_constraintTop_toBottomOf="@+id/tv_sayac" />

    <Button
        android:id="@+id/btn_ayarlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayaç Ayarları"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

</androidx.constraintlayout.widget.ConstraintLayout>